[user]
	name = typedin
	email = antoine@typedin.dev
[core]
    editor = nvim
    pager = delta
    excludesfile = ~/.gitignore_global
[color]
    ui = auto
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[fetch]
    prune = true
[help]
    autocorrect = 10
[include]
    path = ~/.gitconfig_local
[push]
    default = current
[rerere]
    enabled = true
[merge]
    tool = nvimdiff
[interactive]
    diffFilter = "delta --theme=OneDark"
[init]
    templatedir = /share/git-core/templates
    defaultBranch = main
[credential]
    helper = cache --timeout 604800
[pull]
    rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
