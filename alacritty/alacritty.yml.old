---
live_config_reload: true
env:
  TERM: xterm-256color
font:
  size: 9.0
  offset:
    x: 0
    y: 10
  glyph_offset:
    x: 0
    y: 6
  normal:
    family: Fira Code Nerd Font
    style: Normal
  semibold:
    family: Fira Code Nerd Font
    style: Medium
  bold:
    family: Fira Code Nerd Font
    style: Bold
  italic:
    family: Fira Code Nerd Font
    style: Italic
  bold_italic:
    family: Fira Code Nerd Font
    style: Bold Italic
window:
  opacity: 0.9
  dimensions:
    columns: 0
    lines: 0
  padding:
    x: 0
    y: 0
  dynamic_padding: true
  decorations: none
scrolling:
  history: 10000
  multiplier: 3
cursor:
  style:
    shape: Block
    blinking: Always
  blink_interval: 800
  unfocused_hollow: true
draw_bold_text_with_bright_colors: false
custom_cursor_colors: false
# Colors (Monokai Dark)
# rebelot/kanagawa.nvim
shell:
  program: /bin/zsh
  args:
    - -l
    - -c
    # - "tmux attach || tmux"
    # - "zellij"
import:
  - ~/one-dark.yaml
